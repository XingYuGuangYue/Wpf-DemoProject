<Window x:Class="TCPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TCPClient"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="600"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Connect to Server" Height="30" Margin="0,10" Click="ConnectToServer_Click" />
            <TextBlock Text="Received Message:" Margin="0,10" />
            <TextBox x:Name="ReceivedMessageBox" Height="100" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            <TextBlock Text="Send Message:" Margin="0,10" />
            <TextBox x:Name="SendMessageBox" Height="30" />
            <Button Content="Send" Height="30" Margin="0,10" Click="SendMessage_Click" />
        </StackPanel>
    </Grid>
</Window>
