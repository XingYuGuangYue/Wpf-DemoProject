<Window x:Class="TCPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Connect to Server" Click="ConnectToServer_Click" Height="30" Margin="0,10"/>
            <TextBlock Text="Received Message:" Margin="0,10"/>
            <TextBox x:Name="ReceivedMessageBox" Height="100" IsReadOnly="True" 
                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            <TextBlock Text="Send Message:" Margin="0,10"/>
            <TextBox x:Name="SendMessageBox" Height="30"/>
            <Button Content="Send" Click="SendMessage_Click" Height="30" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
